@{
}

@model List<PukesMVC.Models.Entities.Puke>

<div>
    <a asp-area="" asp-controller="Pukes" asp-action="Add">Add Puke</a>
</div>

<h1>All Pukes</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Puke
            </th>
            <th>
                Notes
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var puke in Model)
        {
            <tr>
                <td>@puke.State.Name</td>
                <td>@puke.Notes</td>
                <td>
                    <a asp-controller="Pukes" asp-action="Edit" asp-route-id="@puke.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
}

@model PukesMVC.Models.AddPukeViewModel

<h1>Add Puke</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Notes</label>
        <input type="text" class="form-control" asp-for="Notes">
    </div>



    <div class="mt-3">
        <div class="form-group" style="margin-left:85px">
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.StateId,
                                      ViewBag.States as SelectList,
                                      new { @class = "form-control" })
            </div>
        </div>
    </div>
    

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
@{
}

@model List<PukesMVC.Models.Entities.State>

<div>
    <a asp-area="" asp-controller="States" asp-action="Add">Add State</a>
</div>

<h1>All States</h1>

<table class="table">
    <thead>
        <tr>
            <th>State Name<th>
        </tr>
    </thead>

    <tbody>
        @foreach(var state in Model)
        {
            <tr>
                <td>@state.Name</td>
                <td>
                    <a asp-controller="States" asp-action="Edit" asp-route-id="@state.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
